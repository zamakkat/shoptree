dt Name
dd = @category.name
dt Depth (number of parents)
dd = @category.level
- if @category.ancestors.any?
  dt Parents
  dd = category_hierarchy @category.parent

h4 Products
dt Number of Products (directly under this category)
dd = @category.products_count
dt Total number of Products (including sub-categories)
dd = @category.total_products_count

dt Products listing
= render 'admin/products/index', products: @category.all_products

.m-t-10
= link_to 'Back', admin_categories_path, class: 'btn btn-default m-r-10'
= link_to 'Edit', edit_admin_category_path(@category), class: 'btn btn-warning m-r-10'
